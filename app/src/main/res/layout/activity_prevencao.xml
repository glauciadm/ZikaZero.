<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.zikazero.PrevencaoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Combate ao mosquito"
            android:textSize="20sp"
            android:textColor="#228B22"
            android:textAlignment="center"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_aquatica"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img_aquatica"
                android:layout_marginTop="8dp"
                android:onClick="imgAquatica"
                />

            <ImageView
                android:id="@+id/img_barril"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img_barril"
                android:layout_marginTop="8dp"
                android:onClick="imgBarril"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_caixa"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img_caixa"
                android:layout_marginTop="8dp"
                android:onClick="imgCaixa"/>

            <ImageView
                android:id="@+id/img_calha"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img_calha"
                android:layout_marginTop="8dp"
                android:onClick="imgCalha"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_dog"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img_dog"
                android:layout_marginTop="8dp"
                android:onClick="imgDog"/>

            <ImageView
                android:id="@+id/img_garrafas"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img_garrafas"
                android:layout_marginTop="8dp"
                android:onClick="imgGarrafas"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_laje"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img_laje"
                android:layout_marginTop="8dp"
                android:onClick="imgLaje"/>

            <ImageView
                android:id="@+id/img_piscina"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img_piscina"
                android:layout_marginTop="8dp"
                android:onClick="imgPiscina"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_pneu"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img_pneu"
                android:layout_marginTop="8dp"
                android:onClick="imgPneu"/>

            <ImageView
                android:id="@+id/img_ralo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img_ralo"
                android:layout_marginTop="8dp"
                android:onClick="imgRalo"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_recicle"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img_recicle"
                android:layout_marginTop="8dp"
                android:onClick="imgRecicle"/>

            <ImageView
                android:id="@+id/img_vaso"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img_vaso"
                android:layout_marginTop="8dp"
                android:onClick="imgVaso"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_repelente"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img_repelente"
                android:layout_marginTop="8dp"
                android:onClick="imgRepelente"/>

            <ImageView
                android:id="@+id/img_lixo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img_lixo"
                android:layout_marginTop="8dp"
                android:onClick="imgLixo"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
</ScrollView>